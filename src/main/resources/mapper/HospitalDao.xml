<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bibu.dao.HospitalDao">

    <resultMap type="com.bibu.entity.Hospital" id="HospitalMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="addressId" column="address_id" jdbcType="INTEGER"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="HospitalMap">
        select
          id, name, address_id, status
        from hospital
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="HospitalMap">
        select
          id, name, address_id, status
        from hospital
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="addressId != null">
                and address_id = #{addressId}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from hospital
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="addressId != null">
                and address_id = #{addressId}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into hospital(name, address_id, status)
        values (#{name}, #{addressId}, #{status})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into hospital(name, address_id, status)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.name}, #{entity.addressId}, #{entity.status})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into hospital(name, address_id, status)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.addressId}, #{entity.status})
        </foreach>
        on duplicate key update
        name = values(name),
        address_id = values(address_id),
        status = values(status)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update hospital
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="addressId != null">
                address_id = #{addressId},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from hospital where id = #{id}
    </delete>

</mapper>

